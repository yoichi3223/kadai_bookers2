
<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile',user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform' , book: @book%>
	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path(@book) %></td>
					<td><%= @book.body %></td>
					<td><div id="favorite_buttons_<%= @book.id %>">
                    <%= render partial: 'favorites/favorite',locals:{ book: @book,favorites: @favorite} %></div><td>
					<td>コメント数：<%= @book.book_comments.count %></td>
					<% if @book.user == current_user %>
					<td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td><% end %>
					<% if @book.user == current_user %>
					<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td><% end %>
				</tr>
			</table>
<ol class= "list-style">
  <%= render partial: 'book_comments/comment_table',locals:{ book: @book,book_comment: @book_comment} %>
</ol>
<div id="js-table-comment_<%= @book.id %>">
    <%= render partial: 'book_comments/book_comment',locals:{ book: @book,book_comment: @book_comment} %></div>
	</div>
</div>